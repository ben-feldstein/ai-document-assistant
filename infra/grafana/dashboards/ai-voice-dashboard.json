{
  "id": null,
      "title": "AI Document Assistant - System Dashboard",
      "tags": ["ai-document", "document-assistant", "monitoring"],
  "style": "dark",
  "timezone": "browser",
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "8.0.0"
    },
    {
      "type": "datasource",
      "id": "prometheus",
      "name": "Prometheus",
      "version": "1.0.0"
    }
  ],
  "panels": [
    {
      "id": 1,
      "title": "System Health Overview",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "expr": "up{job=\"ai-document-api\"}",
          "legendFormat": "API Service",
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "green", "value": 1}
            ]
          }
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "Request Rate",
      "type": "graph",
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "expr": "rate(http_requests_total{job=\"ai-document-api\"}[5m])",
          "legendFormat": "Requests/sec",
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "yAxes": [
        {"label": "Requests/sec", "min": 0}
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
    },
    {
      "id": 3,
      "title": "Response Latency",
      "type": "graph",
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"ai-document-api\"}[5m])) or vector(0)",
          "legendFormat": "P95 Latency",
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        },
        {
          "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"ai-document-api\"}[5m])) or vector(0)",
          "legendFormat": "P50 Latency",
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "yAxes": [
        {"label": "Seconds", "min": 0}
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
    },
    {
      "id": 4,
      "title": "Error Rate",
      "type": "graph",
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "expr": "rate(http_requests_total{job=\"ai-document-api\", status=~\"5..\"}[5m]) or vector(0)",
          "legendFormat": "5xx Errors/sec",
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        },
        {
          "expr": "rate(http_requests_total{job=\"ai-document-api\", status=~\"4..\"}[5m]) or vector(0)",
          "legendFormat": "4xx Errors/sec",
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "yAxes": [
        {"label": "Errors/sec", "min": 0}
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
    },
    {
      "id": 5,
      "title": "Active WebSocket Connections",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "expr": "websocket_connections_active{job=\"ai-document-api\"}",
          "legendFormat": "Active Connections",
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "short"
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 24}
    },
    {
      "id": 6,
      "title": "System Resources",
      "type": "graph",
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total{job=\"ai-document-api\"}[5m]) * 100 or vector(0)",
          "legendFormat": "API CPU %",
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        },
        {
          "expr": "process_resident_memory_bytes{job=\"ai-document-api\"} / 1024 / 1024 or vector(0)",
          "legendFormat": "API Memory MB",
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "yAxes": [
        {"label": "CPU % / Memory MB", "min": 0}
      ],
      "gridPos": {"h": 8, "w": 12, "x": 6, "y": 24}
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "30s"
}
